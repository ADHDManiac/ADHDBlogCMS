<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= JSON.parse(JSON.stringify(post.title)) %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/dompurify/2.3.4/purify.min.js"></script>
</head>
<body>
  <div class="container mt-5">
    <h1><%= JSON.parse(JSON.stringify(post.title)) %></h1>
    <div id="postContent"></div>
    <a href="/" class="btn btn-primary">Back to Posts</a>
  </div>
  <script>
    const postContent = document.getElementById('postContent');
    const rawHtml = JSON.parse('<%- JSON.stringify(post.content) %>');
    const sanitizedHtml = DOMPurify.sanitize(rawHtml);
    postContent.innerHTML = sanitizedHtml;
  </script>
</body>
</html>
